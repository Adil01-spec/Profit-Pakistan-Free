
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and ownership.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Admins have a custom claim `admin` set to true.
      return request.auth != null && request.auth.token.admin == true;
    }

    /**
     * @description User profiles are only accessible by their owner or an admin.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    /**
     * @description User-specific history records are only accessible by their owner or an admin.
     * @path /users/{userId}/history/{recordId}
     */
    match /users/{userId}/history/{recordId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    /**
     * @description Free usage tracking is only accessible by the user or an admin.
     * @path /free_usage/{userId}
     */
    match /free_usage/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    /**
     * @description Mock payments collection is publicly accessible for testing.
     * @path /mockPayments/{paymentId}
     */
    match /mockPayments/{paymentId} {
        allow read, write: if true;
    }

    /**
     * @description Pricing plans are publicly readable.
     * @path /plans/{planId}
     */
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Ad configurations are publicly readable.
     * @path /ads/{adId}
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
