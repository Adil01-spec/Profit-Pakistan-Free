
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description User profiles are only accessible by their owner.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description User-specific history records are only accessible by their owner.
     * @path /users/{userId}/history/{recordId}
     */
    match /users/{userId}/history/{recordId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Free usage tracking is only accessible by the user.
     * @path /free_usage/{userId}
     */
    match /free_usage/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    /**
     * @description Mock payments collection is publicly accessible for testing.
     * @path /mockPayments/{paymentId}
     */
    match /mockPayments/{paymentId} {
        allow read, write: if true;
    }

    /**
     * @description Pricing plans are publicly readable. No client writes allowed.
     * @path /plans/{planId}
     */
    match /plans/{planId} {
      allow get, list: if true;
      allow write: if false;
    }

    /**
     * @description Ad configurations are publicly readable. No client writes allowed.
     * @path /ads/{adId}
     */
    match /ads/{adId} {
      allow get, list: if true;
      allow write: if false;
    }
  }
}
