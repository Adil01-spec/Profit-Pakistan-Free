
{
  "entities": {
    "Plan": {
      "title": "Plan",
      "description": "Describes a pricing plan for the application.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique ID for the plan (e.g., 'pro')." },
        "name": { "type": "string", "description": "Display name of the plan." },
        "price": { "type": "string", "description": "Price description (e.g., 'â‚¨ 799 /month')." },
        "highlight": { "type": "string", "description": "A short highlight of the plan." },
        "features": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of features included in the plan."
        }
      },
      "required": ["id", "name", "price", "features"]
    },
    "Ad": {
      "title": "Ad",
      "description": "Describes an ad banner configuration.",
      "type": "object",
      "properties": {
        "image": { "type": "string", "format": "uri", "description": "URL of the ad banner image." },
        "link": { "type": "string", "format": "uri", "description": "Destination URL for the ad." },
        "text": { "type": "string", "description": "Fallback text for the ad." }
      }
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/plans/{planId}": {
        "schema": { "$ref": "#/entities/Plan" },
        "description": "Stores details about the pricing plans, which are publicly readable."
    },
    "/ads/{adId}": {
        "schema": { "$ref": "#/entities/Ad" },
        "description": "Stores ad configuration data, which is publicly readable."
    }
  }
}
